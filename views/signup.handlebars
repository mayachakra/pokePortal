  <body class='bg-primarybackground'>
    <header class='p-3'>
        <nav class='flex justify-center items-center'>
            <div>
                <img
                class='object-cover h-24'
                 src="/assets/pokemon-title.png" 
                 alt="group of pokemon for background">
            </div>
        </nav>
    </header>
    
    <div class='absolute left 24 top 1/2 font-arcade text-fontcolor leading-5 '>
        <div>
            Sign Up To Become a Trainer
        </div>
        <div>
            <img src="" alt="">
        </div><br>
        <div>
            <form>
  <label for="fname">Username:</label>
  <input type="text" id="fname" name="fname"><br><br>
  <label for="lname">Password:</label>
  <input type="text" id="lname" name="lname">
</form>
            <div>
                password:
            </div>
        </div>
        <button class="mr-2">
            <span>
                <img
                 src="/assets/icons/yellow-btn.png" 
                 alt="yellow register button"
                 class="size-10 w-24">
                <p class="absolute -left-10 top-3 text-xs font-arcade">Register</p>
            </span>
        </button>

    </div>
    

  </body>
