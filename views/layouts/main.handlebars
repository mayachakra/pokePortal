<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Hello World</title>
    <link rel='stylesheet' href='styles.css' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Philosopher:ital,wght@0,400;0,700;1,400;1,700&family=Press+Start+2P&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap'
      rel='stylesheet'
    />
  </head>
  <body class='bg-primarybackground'>
    {{! Header }}
    <header class='p-3'>
      {{! Navigation bar }}
      <nav class='flex justify-center items-center'>
        {{! Title }}
        <div>
          <img
            class='object-cover h-24'
            src='/assets/pokemon-title.png'
            alt='pokemon-title'
          />
        </div>
        {{! Buttons }}
        <div class='ml-6'>
          {{! Login btn }}
          <button class='mr-2'>
            {{! span for img and text }}
            <span class='relative'>
              <img
                src='/assets/icons/yellow-btn.png'
                alt='yellow-btn'
                class='size-14'
              />
              <p class='absolute -left-5 top-3 text-sm'>LOGIN</p>
            </span>
          </button>
          {{! Signup btn }}
          <button class='mr-2'>
            {{! span for img and text }}
            <span class='relative'>
              <img
                src='/assets/icons/yellow-btn.png'
                alt='yellow-btn'
                class='size-14 w-20'
              />
              <p class='absolute -left-6 top-3 text-sm'>SIGNUP</p>
            </span>
          </button>
        </div>

      </nav>
    </header>
  </body>
</html>